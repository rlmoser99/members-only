<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice]%>
      <div class="notification is-primary mb-0">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert]%>
      <div class="notification is-danger mb-0">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>
    <nav class="navbar is-dark" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do %>
          <h1 class="title is-1 has-text-light">Members Only</h1>
        <% end %>
        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false"  data-target="navbarMembersOnly">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>
      <div class="navbar-menu" id="navbarMembersOnly" >
        <div class="navbar-start">
        </div>
        <div class="navbar-end">
          <% if user_signed_in? %>
            <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: "navbar-item" %>
            <div class="navbar-item">
              <div class="buttons">
                <%= link_to 'New Post', new_post_path, class: "button is-light navbar-item" %>
              </div>
            </div>
          <% else %>
            <%= link_to 'Log In', new_user_session_path, class: "navbar-item" %>
            <div class="navbar-item">
              <div class="buttons">
                <%= link_to 'Sign Up', new_user_registration_path, class: "button is-light navbar-item" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
