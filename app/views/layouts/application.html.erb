<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice]%>
      <div class="notification is-primary mb-0">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert]%>
      <div class="notification is-danger mb-0">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>
    <nav class="navbar is-info">
      <div class="navbar-menu">
        <div class="navbar-start">
          <%= link_to root_path, class: "navbar-item" do %>
  			    <h1 class="title is-1 has-text-light">Members Only</h1>
  		    <% end %>
        </div>
        <div class="navbar-end">
          <%= link_to 'Log In', new_user_session_path, class: "navbar-item" %>
          <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: "navbar-item" %>
          <%= link_to 'Sign Up', new_user_registration_path, class: "navbar-item" %>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
